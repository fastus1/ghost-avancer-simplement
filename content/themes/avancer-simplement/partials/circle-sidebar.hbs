<aside class="circle-sidebar">
    <section class="sidebar-section">
        {{#get 'posts' limit='15' order='published_at desc'}}
            <h2 class="sidebar-section__title">
                <span class="sidebar-section__icon">{{> "icons/article"}}</span>
                Articles
                <span class="sidebar-section__count">{{pagination.total}}</span>
            </h2>
            <nav class="sidebar-posts" aria-label="Articles recents">
                <ul class="sidebar-posts__list">
                    {{#foreach posts}}
                        <li class="sidebar-posts__item">
                            <a href="{{url}}" class="sidebar-posts__link{{#if featured}} sidebar-posts__link--featured{{/if}}">
                                {{#if feature_image}}
                                    <img src="{{img_url feature_image size="xxs"}}" alt="" class="sidebar-posts__thumb" loading="lazy">
                                {{else}}
                                    <span class="sidebar-posts__icon">{{> "icons/document"}}</span>
                                {{/if}}
                                <span class="sidebar-posts__title">{{title}}</span>
                            </a>
                        </li>
                    {{/foreach}}
                </ul>
            </nav>
        {{else}}
            <h2 class="sidebar-section__title">
                <span class="sidebar-section__icon">{{> "icons/article"}}</span>
                Articles
            </h2>
            <p class="sidebar-empty">Aucun article pour le moment</p>
        {{/get}}
    </section>

    <div class="sidebar-toggle-wrapper">
        {{> "theme-toggle"}}
    </div>
</aside>
